@using Forms.Web.Models;
@model RegisterVM

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-controller="Account" asp-action="Register" method="post">
    <table>
        <tbody>
            <tr>
                <td><label asp-for="Email"></label></td>
                <td>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email" class="error"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="Password"></label></td>
                <td>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password" class="error"></span>
                </td>
            </tr>
            <tr>
                <td><label asp-for="ConfirmPassword"></label></td>
                <td>
                    <input asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="error"></span>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Register" class="btn btn-primary" />
                </td>
            </tr>
        </tbody>
    </table>
</form>
