@model ShoppingCart
@{
    ViewData["Title"] = "ViewCart";
}

<h2>View Cart</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Item</td>
            <td>Price</td>
            <td>Qty</td>
            <td>Ext Price</td>
        </tr>
    </thead>
    <tbody>
        @foreach (ShoppingCartItem item in Model.Items)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Product.Cost</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.Cost * item.Quantity)</td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td>@Model.GrandTotal</td>
        </tr>
    </tbody>
</table>

