@model Recipe
@{
    ViewData["Title"] = "Add2";
}

<h1>Add2</h1>
<p>Add the ingredients here.</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Unit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Ingredient ing in Model.Ingredients)
        {
            <tr>
                <td>@ing.Name</td>
                <td>@ing.Quantity</td>
                <td>@ing.Unit</td>
            </tr>
        }
    </tbody>
</table>
<form asp-action="Add2" asp-controller="Home" method="post">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Unit</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><input type="text" name="Name" /></td>
                <td><input type="number" name="Quantity" /></td>
                <td><input type="text" name="Unit" /></td>
            </tr>
        </tbody>
    </table>
    <input type="submit" value="Add Ingredient" />
</form>

<form asp-action="Add3" asp-controller="Home" method="get">
<input type="submit" value="Done with Ingredients ==>" />
</form>
